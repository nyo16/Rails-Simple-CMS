<article class="module width_full">
	<header><h3>All Galleries</h3></header>


	<div class="tab_container">
		<table id="datatable_galleries" class="tablesorter" cellspacing="0">
			<thead>
				<tr>
					<th>Name</th>
					<th>Created</th>
					<th>Updated</th>
					<th class="index_action">Edit</th>
					<th class="index_action">Delete</th>
				</tr>
			</thead>
			<tbody>
				<% @galleries.each do |gallery| %>
				<tr class="<%= cycle("odd", "even") %>">
					<td><%= link_to gallery.name, admin_gallery_path(gallery) %></td>
					<td><%= gallery.created_at %></td>
					<td><%= gallery.updated_at %></td>
					<td><%= link_to 'Edit', edit_admin_gallery_path(gallery), :class => "edit_link edit_ajax_link" %></td>
					<td><%= link_to 'Destroy', [:admin, gallery], confirm: 'Are you sure?', method: :delete, :class => "delete_link" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
<br />
<br />
</article><!-- end of stats article -->
<div class="spacer"></div>

